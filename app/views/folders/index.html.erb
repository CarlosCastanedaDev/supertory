<p style="color: green"><%= notice %></p>

<h1>Folders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Folder Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td>
          <%= link_to folder_path(folder), class: "custom-link" do %>
          <%= image_tag asset_path('list.svg') %>
           Details
          <% end %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
