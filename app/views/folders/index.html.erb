<p style="color: green"><%= notice %></p>

<h1>Folders</h1>



<table class="table">
  <thead>
    <tr>
      <th>Folder Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td><%= link_to "Details", folder_path(folder) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
