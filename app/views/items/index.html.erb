
<h1>Items</h1>

<%= link_to "New item", new_item_path %>
<div id="items">
  <table class="table">
    <thead>
      <tr>
        <th>Item name:</th>
        <th>Facility:</th>
        <th>Folder:</th>
        <th>Comments:</th>
        <th>Purchase Date:</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.product.name, item %></td>
          <td><%= link_to item.facility.name, facility_path(item) %></td>
          <td><%= item.folder.name %></td>
          <td><%= link_to "Show item comments", comment_path(item) %></td>
          <td><%= item.purchase.created_at.strftime("%D") %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
