<p style="color: green"><%= notice %></p>

<h1>Facilities</h1>



<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= facility.address %></td>
        <td><%= link_to "Details", facility_path(facility) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
