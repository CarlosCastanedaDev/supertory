<p style="color: green"><%= notice %></p>

<h2><%= @facility.name %> Item List</h2>

<div class="btn-group" role="group" style="padding-right: 10px;">
  <%= link_to "Edit", edit_facility_path(@facility), class: "btn btn-primary" %>
</div>

<div class="btn-group" role="group" style="padding-right: 10px;">
  <%= link_to "Back to Facilities", facilities_path, class: "btn btn-secondary" %>
</div>

<div class="btn-group" role="group" style="padding-right: 10px;">
  <%= button_to "Delete", @facility, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form_class: "d-inline" %>
</div>

<div class="container mt-5">
  <div class="card">
    <div class="card-header"> <!-- Added bg-secondary class for grey header -->
      <h5 class="card-title">Facility Items</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>Item Name</th>
              <th>Description</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @facility.items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item, class: "custom-link" do %>
                    <%= image_tag asset_path('list.svg') %>
                    <%= item.product.name %>
                  <% end %>
                </td>
                <td><%= item.product.description %></td>
                <td>
                  <% if item.status == "Active" %>
                    <%= image_tag asset_path('active.svg') %>
                  <% else %>
                    <%= image_tag asset_path('inactive.svg') %>
                  <% end %>
                  <%= item.status %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
